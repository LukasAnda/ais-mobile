<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <ImageView
            android:id="@+id/profile"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <me.grantland.widget.AutofitTextView
            android:id="@+id/aisId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:gravity="end|center_vertical"
            android:singleLine="true"
            android:text="AIS ID: 91984"
            android:textColor="@color/color_on_surface"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@id/wifiName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/profile"
            app:layout_constraintTop_toTopOf="parent" />

    <me.grantland.widget.AutofitTextView
            android:id="@+id/wifiName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:gravity="end|center_vertical"
            android:singleLine="true"
            android:text="AIS ID: 91984"
            android:textColor="@color/color_on_surface"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@id/wifiPassword"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/profile"
            app:layout_constraintTop_toBottomOf="@id/aisId" />

    <me.grantland.widget.AutofitTextView
            android:id="@+id/wifiPassword"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:gravity="end|center_vertical"
            android:singleLine="true"
            android:text="AIS ID: 91984"
            android:textColor="@color/color_on_surface"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/profile"
            app:layout_constraintTop_toBottomOf="@id/wifiName" />

</androidx.constraintlayout.widget.ConstraintLayout>